<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="eventItemVBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="100.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/16">
    <children>
        <HBox prefHeight="30.0" prefWidth="200.0">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
            <children>
                <Label fx:id="eventItemTitle" text="Title">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="eventItemDuration" alignment="CENTER_RIGHT" contentDisplay="RIGHT"
                       text="StartingDate - EndingDate" textFill="GREY">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
        <HBox prefHeight="20.0" prefWidth="200.0">
            <children>
                <Label fx:id="eventItemId" text="Id" textFill="GREY">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                    </HBox.margin>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="eventItemOrganizer" text="Organizer: username" textFill="GREY">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                    </HBox.margin>
                </Label>
            </children>
            <VBox.margin>
                <Insets left="10.0" right="10.0"/>
            </VBox.margin>
        </HBox>
        <HBox alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="200.0">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0"/>
            </VBox.margin>
            <children>
                <Label fx:id="eventItemType" text="PUBLIC" textFill="LIME"/>
            </children>
        </HBox>
    </children>
</VBox>
