<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="main" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="50.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16">
    <top>
        <HBox fx:id="navbarHbox" alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="300.0"
              BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="profileButton" mnemonicParsing="false" onAction="#goToProfile" text="Profile">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="eventsButton" mnemonicParsing="false" onAction="#goToEvents" text="Events">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="newGoalButton" mnemonicParsing="false" onAction="#goToNewGoal" text="Create new goal">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="adviceButton" mnemonicParsing="false" onAction="#goToGiveAdvice" text="Give Advice">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="eventParticipationButton" mnemonicParsing="false"
                        onAction="#goToManageEventParticipation" text="Manage Event Participations">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </HBox>
    </top>
</BorderPane>
