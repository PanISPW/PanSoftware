            fx:controller="com.pansoftware.logic.ui.controller.EventsGraphicalController">
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Events List">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <ScrollPane hbarPolicy="NEVER">
                    <content>
                        <VBox fx:id="eventsList" alignment="CENTER" spacing="10.0"/>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>
